<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/clockView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="12:00:00"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/SpeedLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/speed_label"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_above="@+id/SpeedDisplay"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/SpeedDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/speed_display"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="60sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/speed_display"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="60sp" />

    <TextView
        android:id="@+id/leftHeightLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:text="@string/left_height_label"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignTop="@+id/SpeedLabel" />

    <TextView
        android:id="@+id/leftHeighDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/leftHeightLabel"
        android:layout_below="@+id/leftHeightLabel"
        android:text="@string/left_height_value"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="60sp" />

        <TextView
        android:id="@+id/rightHeightLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_marginRight="33dp"
        android:text="@string/right_height_label"
        android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_alignTop="@+id/SpeedLabel"
            android:layout_alignParentRight="true" />
        
    <TextView
        android:id="@+id/rightHeightDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/rightHeightLabel"
        android:layout_below="@+id/rightHeightLabel"
        android:text="@string/right_height_value"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="60sp" />

    <TextView
        android:id="@+id/maxSpeedLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MaxSpeed"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignBottom="@+id/maxSpeedDisplay"
        android:layout_toLeftOf="@+id/SpeedDisplay" />

    <TextView
        android:id="@+id/maxSpeedDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="- -"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/SpeedDisplay" />

    <TextView
        android:id="@+id/frontRpm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-X-"
        android:textSize="50sp"
        android:layout_below="@+id/clockView"
        android:layout_toLeftOf="@+id/rightHeightDisplay"
        android:layout_marginTop="28dp" />

    <TextView
        android:id="@+id/rearRpm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-X-"
        android:textSize="50sp"
        android:layout_alignBaseline="@+id/rearRpmLabel"
        android:layout_alignBottom="@+id/rearRpmLabel"
        android:layout_toLeftOf="@+id/rightHeightDisplay" />

    <TextView
        android:id="@+id/frontRpmLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Front RPM"
        android:layout_alignBaseline="@+id/frontRpm"
        android:layout_alignBottom="@+id/frontRpm"
        android:layout_alignRight="@+id/rearRpmLabel"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/rearRpmLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rear RPM"
        android:textSize="20sp"
        android:layout_marginTop="57dp"
        android:layout_below="@+id/SpeedDisplay"
        android:layout_alignLeft="@+id/leftHeighDisplay" />

</RelativeLayout>